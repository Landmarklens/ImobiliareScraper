<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Imobiliare.ro Scraper Monitoring</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .metric-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .metric-value {
            font-size: 2.5rem;
            font-weight: bold;
        }
        .price-drop {
            background-color: #ff6b6b;
            color: white;
            padding: 2px 6px;
            border-radius: 4px;
            font-weight: bold;
        }
        .log-entry {
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
            padding: 8px;
            background: #f8f9fa;
            border-left: 3px solid #007bff;
            margin-bottom: 5px;
        }
        .status-badge {
            padding: 4px 8px;
            border-radius: 4px;
            font-weight: 500;
        }
        .status-running { background-color: #28a745; color: white; }
        .status-stopped { background-color: #6c757d; color: white; }
        .status-failed { background-color: #dc3545; color: white; }
    </style>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container">
            <span class="navbar-brand mb-0 h1">
                <i class="bi bi-house-door-fill"></i> Imobiliare.ro Scraper Monitor
            </span>
            <span class="text-light">
                <i class="bi bi-clock"></i> <%= moment().format('YYYY-MM-DD HH:mm:ss') %>
            </span>
        </div>
    </nav>

    <div class="container">
        <!-- Metrics Row -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="metric-card">
                    <h5><i class="bi bi-database"></i> Total Properties</h5>
                    <div class="metric-value"><%= scrapedCount.total.toLocaleString() %></div>
                    <small>All time</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="metric-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <h5><i class="bi bi-calendar-day"></i> Last 24 Hours</h5>
                    <div class="metric-value"><%= scrapedCount.last_24h.toLocaleString() %></div>
                    <small>New properties</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="metric-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                    <h5><i class="bi bi-calendar-week"></i> Last 7 Days</h5>
                    <div class="metric-value"><%= scrapedCount.last_7d.toLocaleString() %></div>
                    <small>New properties</small>
                </div>
            </div>
        </div>

        <!-- Recent Task Runs -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-play-circle"></i> Recent Scraper Runs</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Task ID</th>
                                <th>Status</th>
                                <th>Started</th>
                                <th>Stopped</th>
                                <th>Reason</th>
                                <th>Resources</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% taskRuns.forEach(task => { %>
                            <tr>
                                <td><code><%= task.taskId %></code></td>
                                <td>
                                    <span class="status-badge status-<%= task.status.toLowerCase() %>">
                                        <%= task.status %>
                                    </span>
                                </td>
                                <td><%= task.startedAt ? moment(task.startedAt).format('MM/DD HH:mm') : '-' %></td>
                                <td><%= task.stoppedAt ? moment(task.stoppedAt).format('MM/DD HH:mm') : '-' %></td>
                                <td><%= task.stoppedReason %></td>
                                <td><small>CPU: <%= task.cpu %> | RAM: <%= task.memory %></small></td>
                            </tr>
                            <% }); %>
                            <% if (taskRuns.length === 0) { %>
                            <tr>
                                <td colspan="6" class="text-center text-muted">No recent task runs found</td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Top Price Drops -->
        <div class="card mb-4">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-graph-down"></i> Top 100 Price Drops (Last 2 Months)</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                    <table class="table table-sm">
                        <thead class="sticky-top bg-white">
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Address</th>
                                <th>Current Price</th>
                                <th>Previous Price</th>
                                <th>Drop</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% priceDrops.forEach((property, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><small><%= property.title ? property.title.substring(0, 50) + '...' : 'N/A' %></small></td>
                                <td><small><%= property.address || 'N/A' %></small></td>
                                <td>€<%= Math.round(property.current_price / 5).toLocaleString() %></td>
                                <td>€<%= Math.round(property.highest_price / 5).toLocaleString() %></td>
                                <td>
                                    <span class="price-drop">
                                        -<%= property.drop_percentage %>%
                                    </span>
                                </td>
                                <td>
                                    <a href="<%= property.url %>" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-box-arrow-up-right"></i>
                                    </a>
                                </td>
                            </tr>
                            <% }); %>
                            <% if (priceDrops.length === 0) { %>
                            <tr>
                                <td colspan="7" class="text-center text-muted">No price drops found in the last 2 months</td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Recent Logs -->
        <div class="card mb-4">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-terminal"></i> Recent Logs</h5>
            </div>
            <div class="card-body">
                <div id="log-container" style="max-height: 400px; overflow-y: auto;">
                    <% recentLogs.forEach(log => { %>
                    <div class="log-entry">
                        <small class="text-muted"><%= moment(log.timestamp).format('HH:mm:ss') %></small>
                        <%= log.message %>
                    </div>
                    <% }); %>
                    <% if (recentLogs.length === 0) { %>
                    <p class="text-center text-muted">No recent logs available</p>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Schedule Info -->
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            <strong>Schedule:</strong> The scraper runs daily at 2:00 AM (Bucharest time)
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Auto-refresh stats every 30 seconds
        setInterval(function() {
            $.get('/api/stats', function(data) {
                $('.metric-value').eq(0).text(data.total.toLocaleString());
                $('.metric-value').eq(1).text(data.last_24h.toLocaleString());
                $('.metric-value').eq(2).text(data.last_7d.toLocaleString());
            });
        }, 30000);

        // Auto-refresh logs every 10 seconds
        setInterval(function() {
            $.get('/api/logs', function(logs) {
                const container = $('#log-container');
                container.empty();
                logs.forEach(log => {
                    const timestamp = new Date(log.timestamp).toLocaleTimeString();
                    container.append(`
                        <div class="log-entry">
                            <small class="text-muted">${timestamp}</small>
                            ${log.message}
                        </div>
                    `);
                });
            });
        }, 10000);
    </script>
</body>
</html>